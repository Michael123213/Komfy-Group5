@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <div class="jumbotron bg-light p-5 rounded">
                <h1 class="display-4">
                    <i class="fa-solid fa-book-open"></i> Welcome to Komfy Library
                </h1>
                <p class="lead">Library Management System - Manage your books, borrowings, reviews, and more!</p>
                <hr class="my-4">
                <p>Navigate through the menu to access different features of the system.</p>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-4 mb-4">
            <div class="card text-white bg-primary">
                <div class="card-body text-center">
                    <i class="fa-solid fa-book fa-3x mb-3"></i>
                    <h5 class="card-title">Books</h5>
                    <p class="card-text">Manage your library's book collection</p>
                    <a asp-controller="Book" asp-action="Index" class="btn btn-light">View Books</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-success">
                <div class="card-body text-center">
                    <i class="fa-solid fa-book-open-reader fa-3x mb-3"></i>
                    <h5 class="card-title">Borrowings</h5>
                    <p class="card-text">Track book borrowings and returns</p>
                    <a asp-controller="Borrowing" asp-action="Index" class="btn btn-light">View Borrowings</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-warning">
                <div class="card-body text-center">
                    <i class="fa-solid fa-star fa-3x mb-3"></i>
                    <h5 class="card-title">Reviews</h5>
                    <p class="card-text">Read and write book reviews</p>
                    <a asp-controller="Review" asp-action="Index" class="btn btn-light">View Reviews</a>
                </div>
            </div>
        </div>

        @if (User.IsInRole("Admin"))
        {
            <div class="col-md-4 mb-4">
                <div class="card text-white bg-danger">
                    <div class="card-body text-center">
                        <i class="fa-solid fa-users fa-3x mb-3"></i>
                        <h5 class="card-title">Users</h5>
                        <p class="card-text">Manage library members and admins</p>
                        <a asp-controller="User" asp-action="Index" class="btn btn-light">View Users</a>
                    </div>
                </div>
            </div>
        }

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-info">
                <div class="card-body text-center">
                    <i class="fa-solid fa-bell fa-3x mb-3"></i>
                    <h5 class="card-title">Notifications</h5>
                    <p class="card-text">View system notifications</p>
                    <a asp-controller="Notification" asp-action="Index" class="btn btn-light">View Notifications</a>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card text-white bg-secondary">
                <div class="card-body text-center">
                    <i class="fa-solid fa-gear fa-3x mb-3"></i>
                    <h5 class="card-title">Settings</h5>
                    <p class="card-text">Customize your preferences</p>
                    <a asp-controller="UserSetting" asp-action="Index" class="btn btn-light">View Settings</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Analytics Section -->
    <div class="row mt-4">
        <div class="col-12">
            <h3 class="mb-3"><i class="fa-solid fa-chart-line"></i> Library Analytics</h3>
        </div>
    </div>

    <div class="row">
        <!-- Most Borrowed Books -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-trophy"></i> Most Borrowed Books</h5>
                </div>
                <div class="card-body">
                    @{
                        var mostBorrowedBooks = ViewBag.MostBorrowedBooks as List<ASI.Basecode.Services.ServiceModels.BookModel>;
                    }
                    @if (mostBorrowedBooks != null && mostBorrowedBooks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var book in mostBorrowedBooks)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">@book.Title</h6>
                                            <small class="text-muted">by @book.Author</small>
                                        </div>
                                        <span class="badge bg-primary rounded-pill">@book.BorrowCount</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No borrowing data available yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Rated Books -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-star"></i> Top Rated Books</h5>
                </div>
                <div class="card-body">
                    @{
                        var topRatedBooks = ViewBag.TopRatedBooks as List<ASI.Basecode.Services.ServiceModels.BookModel>;
                    }
                    @if (topRatedBooks != null && topRatedBooks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var book in topRatedBooks)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">@book.Title</h6>
                                            <small class="text-muted">by @book.Author</small>
                                            <div class="text-warning mt-1">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    if (i <= Math.Floor(book.AverageRating))
                                                    {
                                                        <i class="fa-solid fa-star"></i>
                                                    }
                                                    else if (i <= Math.Ceiling(book.AverageRating))
                                                    {
                                                        <i class="fa-solid fa-star-half-stroke"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="fa-regular fa-star"></i>
                                                    }
                                                }
                                            </div>
                                        </div>
                                        <span class="badge bg-warning text-dark rounded-pill">@book.AverageRating.ToString("0.0")</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No reviews available yet.</p>
                    }
                </div>
            </div>
        </div>

        <!-- Top Borrowers -->
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fa-solid fa-users"></i> Top Borrowers</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopBorrowers != null && ((IEnumerable<dynamic>)ViewBag.TopBorrowers).Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var borrower in ViewBag.TopBorrowers)
                            {
                                <div class="list-group-item px-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 fw-bold">@borrower.UserName</h6>
                                            <small class="text-muted">@borrower.UserEmail</small>
                                        </div>
                                        <span class="badge bg-success rounded-pill">@borrower.BorrowCount</span>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted text-center py-3">No borrowing data available yet.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
