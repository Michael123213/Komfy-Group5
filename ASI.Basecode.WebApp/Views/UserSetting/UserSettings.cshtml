@model ASI.Basecode.Services.ServiceModels.UserSettingModel

@{
    ViewData["Title"] = "My Settings";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4><i class="fa-solid fa-gear"></i> My Settings</h4>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateTheme" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="userId" value="@Model.UserId" />

                        <div class="mb-4">
                            <h5>User Information</h5>
                            <dl class="row">
                                <dt class="col-sm-4">Name:</dt>
                                <dd class="col-sm-8">@Model.UserName</dd>

                                <dt class="col-sm-4">Email:</dt>
                                <dd class="col-sm-8">@Model.UserEmail</dd>
                            </dl>
                        </div>

                        <hr />

                        <div class="mb-4">
                            <h5>Appearance Settings</h5>
                            <div class="mb-3">
                                <label class="form-label">Theme</label>
                                <div class="btn-group w-100" role="group">
                                    <input type="radio" class="btn-check" name="theme" id="lightTheme" value="Light" @(Model.Theme == "Light" ? "checked" : "") />
                                    <label class="btn btn-outline-warning" for="lightTheme">
                                        <i class="fa-solid fa-sun"></i> Light Theme
                                    </label>

                                    <input type="radio" class="btn-check" name="theme" id="darkTheme" value="Dark" @(Model.Theme == "Dark" ? "checked" : "") />
                                    <label class="btn btn-outline-dark" for="darkTheme">
                                        <i class="fa-solid fa-moon"></i> Dark Theme
                                    </label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fa-solid fa-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-save"></i> Save Settings
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>