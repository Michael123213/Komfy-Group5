@model List<ASI.Basecode.Services.ServiceModels.BookModel>

@{
    ViewData["Title"] = "Book Management";
}

<h1 class="text-3xl font-bold text-gray-800 mb-6">Book Inventory</h1>

<p class="mb-4">
    <a asp-action="Create" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition duration-150 shadow-md">Add New Book</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 mb-4" role="alert">
        <p>@TempData["SuccessMessage"]</p>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-4" role="alert">
        <p>@TempData["ErrorMessage"]</p>
    </div>
}

<div class="overflow-x-auto bg-white rounded-lg shadow-lg">
    <table class="min-w-full table-fixed divide-y divide-gray-200">
        <thead class="bg-gray-100">
            <tr>
                <th scope="col" class="w-1/6 px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.First().Title)
                </th>
                <th scope="col" class="w-24 px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Code
                </th>
                <th scope="col" class="w-1/6 px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.First().Author)
                </th>
                <th scope="col" class="w-2/6 px-4 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th scope="col" class="w-24 px-4 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Status
                </th>
                <th scope="col" class="w-48 px-4 py-4 text-center text-xs font-semibold text-gray-700 uppercase tracking-wider">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @foreach (var item in Model)
            {
                <tr class="hover:bg-gray-50 transition duration-150">
                    <td class="px-4 py-4 text-sm font-medium text-gray-900">
                        <div class="line-clamp-2">@Html.DisplayFor(modelItem => item.Title)</div>
                    </td>
                    <td class="px-4 py-4 text-sm text-gray-600">
                        <span class="font-mono">@Html.DisplayFor(modelItem => item.BookCode)</span>
                    </td>
                    <td class="px-4 py-4 text-sm text-gray-700">
                        <div class="line-clamp-2">@Html.DisplayFor(modelItem => item.Author)</div>
                    </td>
                    <td class="px-4 py-4 text-sm text-gray-600">
                        <div class="line-clamp-3" title="@item.Description">
                            @(string.IsNullOrEmpty(item.Description) ?
                                Html.Raw("<span class='text-gray-400 italic'>No description</span>") :
                                item.Description)
                        </div>
                    </td>
                    <td class="px-4 py-4 text-center">
                        <span class="px-3 py-1 inline-flex text-xs font-semibold rounded-full @(item.Status == "Available" ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800")">
                            @Html.DisplayFor(modelItem => item.Status)
                        </span>
                    </td>
                    <td class="px-4 py-4 text-center">
                        <div class="flex items-center justify-center gap-2">
                            @if (item.Status == "Available")
                            {
                                <!-- Borrow Button -->
                                <form asp-controller="Borrowing" asp-action="BorrowBook" asp-route-bookId="@item.BookID" method="post" onsubmit="return confirm('Borrow this book for 14 days?');" class="inline-block">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="bg-green-600 text-white px-3 py-1.5 text-xs rounded hover:bg-green-700 transition duration-150 shadow-sm">
                                        Borrow
                                    </button>
                                </form>
                            }
                            else
                            {
                                <span class="text-gray-400 text-xs px-3 py-1.5">Unavailable</span>
                            }

                            <a asp-action="Edit" asp-route-id="@item.BookID" class="text-indigo-600 hover:text-indigo-800 text-xs px-2 py-1.5 hover:bg-indigo-50 rounded transition duration-150">
                                Edit
                            </a>

                            <!-- Delete Form -->
                            <form asp-action="Delete" asp-route-id="@item.BookID" method="post" onsubmit="return confirm('Are you sure you want to delete this book?');" class="inline-block">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="text-red-600 hover:text-red-800 text-xs px-2 py-1.5 hover:bg-red-50 rounded transition duration-150">
                                    Delete
                                </button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
